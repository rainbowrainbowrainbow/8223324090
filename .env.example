# Database
DATABASE_URL="postgresql://user:password@localhost:5432/booking_db?schema=public"

# Server
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# JWT
JWT_SECRET=your-strong-secret-min-256-bits
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=30d

# Telegram Bot
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=random-secret-for-webhook-verification
TELEGRAM_ADMIN_CHAT_IDS=123456789,987654321

# LiqPay
LIQPAY_PUBLIC_KEY=your-public-key
LIQPAY_PRIVATE_KEY=your-private-key
LIQPAY_CALLBACK_URL=https://your-domain.com/api/v1/payments/webhook/liqpay

# Redis (for BullMQ job queue)
REDIS_URL=redis://localhost:6379

# App
APP_URL=https://your-domain.com
ADMIN_URL=https://admin.your-domain.com
DEFAULT_TIMEZONE=Europe/Kyiv

# Rate Limiting
RATE_LIMIT_PUBLIC=60
RATE_LIMIT_AUTH=300
RATE_LIMIT_BOOKING=5

# Logging
LOG_LEVEL=info
